<h1>Tasks</h1>

<% @tasks.each do |t| %>

<% if t.completed == false%>
<i class="fas fa-square"></i>
<% else %>
<i class="fas fa-check-square"></i>
<% end %>

  <p><%= t.completed %></p>
  <h3><%= link_to t.title, task_path(t) %>
  <%= link_to 'edit', edit_path(t)  %>
  <%= link_to 'delete', destroy_path(t), method: :delete, data: { confirm: 'are you sure?'} %>


<% end %>
